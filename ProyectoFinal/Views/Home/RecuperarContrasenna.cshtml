@model ProyectoFinal.Entities.UsuariosEnt

@{
    ViewBag.Title = "RecuperarContrasenna";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-2 px-1 px-sm-2">
                        <div class="brand-logo">
                            <img src="~/assets/images/logo.png" alt="logo" />
                        </div>

                        <!-- Pre-loader start -->
                        <div class="theme-loader">
                            <div class="loader-track">
                                <div class="loader-bar"></div>
                            </div>
                        </div>
                        <!-- Pre-loader end -->

                        <hr />
                        <div class="auth-box">
                            <div class="row m-b-20">
                                <div class="col-md-12">
                                    <h3 class="text-left txt-primary">Recuperar contraseña</h3>
                                </div>
                            </div>
                            @using (Html.BeginForm("RecuperarContrasenna", "Home", FormMethod.Post, new { @class = "pt-3" }))
                            {
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.CorreoElectronico,
                                   new
                                   {
                                       @class = "form-control form-control-lg",
                                       @placeholder = "Correo Electrónico",
                                       @required = true,
                                       @autocomplete = "off",
                                       @onblur = "BuscarCorreo();"
                                   })
                                </div>
                                <div class="mt-3">

                                    <div class="mensajeError">
                                        @ViewBag.mensaje
                                    </div>

                                    <input id="btnProcesar" name="btnProcesar" type="submit" value="Procesar" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">
                                </div>
                            }

                            <hr />
                            <div class="row">
                                <div class="col-md-10">
                                    <p class="text-inverse text-left m-b-0">Gracias por visitar La cevicheria.</p>
                                </div>
                                <div class="col-md-3">
                                    <img src="~/assets/images/auth/Logo-small-bottom.png" alt="small-logo.png">
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/FuncionesJS/RecuperarContrasenna.js"></script>
