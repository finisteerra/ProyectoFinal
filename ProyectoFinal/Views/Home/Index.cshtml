@model ProyectoFinal.Entities.UsuariosEnt

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                        <div class="brand-logo">
                            <img src="~/assets/images/logo.png" alt="logo" />
                        </div>

                        <!-- Pre-loader start -->
                        <div class="theme-loader">
                            <div class="loader-track">
                                <div class="loader-bar"></div>
                            </div>
                        </div>
                        <!-- Pre-loader end -->

                        <hr/>
                        <div class="auth-box">
                            <div class="row m-b-20">
                                <div class="col-md-12">
                                    <h3 class="text-left txt-primary">Entrar</h3>
                                </div>
                            </div>
                            @using (Html.BeginForm("IniciarSesion", "Home", FormMethod.Post, new { @class = "pt-3" }))
                            {
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.correo, new { @class = "form-control form-control-lg", @placeholder = "Correo Electrónico", @required = true })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(Model => Model.contrasenna, new { @class = "form-control form-control-lg", @placeholder = "Contraseña", @required = true, @type = "Password" })
                                </div>
                                <div class="mt-3">

                                    <div class="mensajeError">
                                        @ViewBag.mensaje
                                    </div>

                                    <input type="submit" value="Iniciar Sesión" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    <a href="@Url.Action("RegistrarUsuario","Home")" class="text-primary"> ¿No tiene una cuenta?</a> <br>
                                    <a href="@Url.Action("RecuperarContrasenna","Home")" class="text-primary"> ¿Olvidó su contraseña?</a>
                                </div>
                            }

                            <hr/>
                            <div class="row">
                                <div class="col-md-10">
                                    <p class="text-inverse text-left m-b-0">Gracias por visitar La cevicheria.</p>
                                </div>
                                <div class="col-md-3">
                                    <img src="~/assets/images/auth/Logo-small-bottom.png" alt="small-logo.png">
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
.
