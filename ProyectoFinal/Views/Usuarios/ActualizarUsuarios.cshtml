@model ProyectoFinal.Entities.UsuariosEnt

@{
    ViewBag.Title = "ActualizarUsuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">

    <div class="col-1">
    </div>

    <div class="col-md-10 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Actualizar Usuarios</h4>

                <br />

                @using (Html.BeginForm("ActualizarUsuarios", "Usuarios", FormMethod.Post, new { @class = "forms-sample" }))
                {
                    @Html.HiddenFor(Model => Model.ConsecutivoUsuario)

                    <div class="row">

                        <div class="form-group col-md-6">
                            @Html.TextBoxFor(m => m.CorreoElectronico, new
                       {
                           @class = "form-control form-control-md",
                           @placeholder = "Correo Electrónico",
                           @required = true,
                           @autocomplete = "off"
                       })
                        </div>

                        <div class="form-group col-md-6">
                            @Html.TextBoxFor(Model => Model.Contrasenna, new
                            {
                                @class = "form-control form-control-md",
                                @placeholder = "Contraseña",
                                @type = "Password"
                            })
                        </div>

                    </div>

                    <div class="row">

                        <div class="form-group col-md-6">
                            @Html.TextBoxFor(m => m.Nombre, new
                            {
                                @class = "form-control form-control-md",
                                @placeholder = "Nombre",
                                @required = true
                            })
                        </div>

                        <div class="form-group col-md-6">
                            @Html.TextBoxFor(Model => Model.Apellido, new
                            {
                                @class = "form-control form-control-md",
                                @placeholder = "Apellido",
                                @required = true
                            })
                        </div>

                    </div>

                    <div class="row">

                        <div class="form-group col-md-6">
                            @Html.TextBoxFor(m => m.Edad, new
                            {
                                @class = "form-control form-control-md",
                                @placeholder = "Edad",
                                @required = true
                            })
                        </div>

                        <div class="form-group col-md-6">
                            @Html.TextBoxFor(Model => Model.Telefono, new
                            {
                                @class = "form-control form-control-md",
                                @placeholder = "Telefono",
                                @required = true
                            })
                        </div>

                    </div>

                    <div class="row">

                        <div class="form-group col-md-6">
                            @Html.DropDownListFor(Model => Model.Rol, ViewBag.ListadoRoles as List<SelectListItem>, new
                            {
                               @class = "form-control form-control-md",
                               @placeholder = "Rol",
                               @required = true
                            })
                        </div>

                    </div>

                    <br />

                    <input type="submit" class="btn btn-primary mr-2" value="Actualizar">

                }
            </div>
        </div>
    </div>

</div>

